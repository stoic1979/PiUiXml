#:import TabbedPanel kivy.uix.tabbedpanel
#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter
#:import get_data parser.get_data

<MainScreen>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: 1,.1
                text: "EDILBLES"
            ListView:
                id: list_view_id
                size_hint: 1,1
                height:25
                adapter:

                    la.ListAdapter(
                    data=[product.title_str() for product in get_data()],
                    selection_mode='single',
                    allow_empty_selection=False,
                    cls=lv.ListItemButton)
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: 1,.22
                text: "CONCENTRATE"
            ListView:
                id: list_view_id
                size_hint: 1,1
                height:25
                adapter:

                    la.ListAdapter(
                    data=[product.title_str() for product in get_data()],
                    selection_mode='single',
                    allow_empty_selection=False,
                    cls=lv.ListItemButton)
            Label:
                padding_top: 20
                size_hint: 1,.21
                text: "TOPICALS"
            ListView:
                id: list_view_id
                size_hint: 1,1
                height:25
                adapter:

                    la.ListAdapter(
                    data=[product.title_str() for product in get_data()],
                    selection_mode='single',
                    allow_empty_selection=False,
                    cls=lv.ListItemButton)

        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: 1,.21
                text: "CBD PRODUCTS"
            ListView:
                id: list_view_id
                size_hint: 1,1
                height:25
                adapter:

                    la.ListAdapter(
                    data=[product.title_str() for product in get_data()],
                    selection_mode='single',
                    allow_empty_selection=False,
                    cls=lv.ListItemButton)

            Label:
                padding_top: 20
                size_hint: 1,.1
                text: "VAPE PRODUCTS"
            ListView:
                id: list_view_id
                size_hint: 1,1
                height:25
                adapter:

                    la.ListAdapter(
                    data=[product.title_str() for product in get_data()],
                    selection_mode='single',
                    allow_empty_selection=False,
                    cls=lv.ListItemButton)
