#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter
#:import get_data parser.get_data

<SecondScreen>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            #right_padding: 5
            orientation: 'vertical'
            #halign: 'left'
            Label:
                size_hint: .9,.1
                rgba: 1,0,1,5
                text: 'EDIBLES'

            ListView:
                id: list_view_id
                size_hint: .9,1

                adapter:
                    la.ListAdapter(
                    data=[product.title_str() for product in get_data()],
                    selection_mode='single',
                    allow_empty_selection=False,
                    cls=lv.ListItemButton)

        BoxLayout:
            right_padding: 5
            orientation: 'vertical'
            halign: 'left'
            Label:
                rgba: 1,0,1,5
                text: 'CONCENTRATE'

        BoxLayout:
            right_padding: 5
            orientation: 'vertical'
            halign: 'left'
            Label:
                rgba: 1,0,1,5
                text: 'CBD PRODUCTS'
