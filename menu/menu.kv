#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter
#:import get_products_by_category products_parser.get_products_by_category

<ListItemButton>:
    selected_color: 255,255,255,1
    deselected_color:  255,255,255,1
    color: 0, 0, 0, 1


<Test>:
    size_hint: 1, 1
    #pos_hint: {'center_x': .5, 'center_y': .5}
    tab_pos: 'top_mid'
    do_default_tab: False

###################################################################
#                                                                 #
#                   SYSTEM SCREEN                                 #
#                                                                 #
###################################################################
    TabbedPanelItem:
        text: 'System'
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: 1.0,.25
                text: 'UPTIME  365:11:15:30'
            Label:
                size_hint: 1.0,.25
                text: 'LAST  SERVER  CONTACT  365:11:15:30'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1.0, .6

                Label:
                    size_hint: .2, 1
                    text: ''
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, .7
                    padding: 30
                    Label:
                        size_hint: .5, 1
                        text: 'API KEY'
                    TextInput:
                        size_hint: .5, 1
                        text: ''
                Label:
                    size_hint: .2, 1
                    text: ''
            AnchorLayout:
                Button:
                    size_hint: .25, .25
                    text: "PI SYSTEM UPDATE"

            Label:
                text: ""

###################################################################
#                                                                 #
#                     MENU SCREEN                                 #
#                                                                 #
###################################################################
    TabbedPanelItem:
        text: 'Menu'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, .7
                padding: 30

                Label:
                    size_hint: .5, 1
                    text: 'THEME'
                Spinner:
                    text: 'Green Rush'
                    values: ('Green Rush', 'Essence')

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, .7
                padding: 30

                Label:
                    size_hint: .5, 1
                    text: 'GOOGLE FONT'
                Spinner:
                    text: 'ARIAL'
                    values: ('ARIAL', 'ARIAL NARROW')
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, .7
                padding: 30

                Label:
                    size_hint: .5, 1
                    text: 'FONT SIZE'
                TextInput:
                    text: ''
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, .7
                padding: 30

                Label:
                    size_hint: .5, 1
                    text: 'FONT COLOR'
                TextInput:
                    text: ''
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, .7
                padding: 30

                Label:
                    size_hint: .5, 1
                    text: 'SCROLL RATE'
                TextInput:
                    text: ''
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, .7
                padding: 30

                Label:
                    size_hint: .5, 1
                    text: 'UPDATE MENU'
                Spinner:
                    text: '1 MIN'
                    values: ('1 MIN', '2 MIN')
            Label:
                text: 'CATEGORIES TO DISPLAY'

